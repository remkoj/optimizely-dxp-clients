{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    /*"moduleResolution": "Bundler",*/
    "lib": [
      "DOM",
      "DOM.AsyncIterable",
      "DOM.Iterable",
      "WebWorker",
      "WebWorker.AsyncIterable",
      "WebWorker.ImportScripts",
      "Webworker.Iterable",
      "ESNext",
      "ESNext.String",
      "ESNext.Intl",
      "ESNext.Promise",
      "ESNext.WeakRef",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.BigInt",
      "ESNext.Collection",
      "ESNext.Decorators",
      "ESNext.Disposable",
      "ESNext.Iterator",
      "ESNext.Object",
      "ESNext.Regexp",
      "ESNext.Symbol"
    ],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.json"]
}
