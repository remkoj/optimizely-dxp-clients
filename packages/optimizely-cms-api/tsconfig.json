{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        /*"moduleResolution": "Bundler",*/
        "lib": ["DOM", "ES2021", "ES2021.String", "ES2021.Intl", "ES2021.Promise", "ES2021.WeakRef"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "stripInternal": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "paths": {
            "@": ["./src"],
            "@/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*.ts","./src/**/*.tsx","./src/**/*.json"],
    "exclude": ["./dist/**"],
}